<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Admin Accounts' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Admin Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_admin_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;New Admin
          <% end %>
          <thead>
            <th>Full Name</th>
            <th>Email</th>
            <th>Last Login</th>
            <th>Last Login IP</th>
            <th>Control</th>
          </thead>

          <tbody>
            <tbody>
              <% @admins.each do |admin| %>
                <tr class="<%= 'info' if current_admin == admin %>">
                  <td><%= admin.full_name %></td>
                  <td><%= admin.email %></td>
                  <td><%= admin.last_sign_in_at %></td>
                  <td><%= admin.last_sign_in_ip %></td>
                  <td>
                    <% if current_admin != admin %>
                      <%= link_to 'Delete', admins_admin_path(admin), :method => :delete, :data => { :confirm => 'Are you sure?' } %>
                    <% else %>
                      N/A
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
