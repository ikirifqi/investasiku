<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Tags' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">News Tag Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_tag_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;New Tag
          <% end %>
          <thead>
            <th>Name</th>
            <th>Control</th>
          </thead>

          <tbody>
            <tbody>
              <% if @tags.empty? %>
                <tr>
                  <td colspan="2">You have no tags. <%= link_to 'Create a new one!', new_admins_tag_path %>.</td>
                </tr>
              <% else %>
                <% @tags.each do |tag| %>
                  <tr>
                    <td><%= tag.name %></td>
                    <td>
                      <%= link_to 'Edit', edit_admins_tag_path(tag) %>&nbsp;|
                      <%= link_to 'Destroy', admins_tag_path(tag), :method => :delete, :data => { :confirm => 'Are you sure?' } %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
