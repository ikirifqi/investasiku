<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Dashboard</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6 col-lg-4">
    <div class="panel panel-blue panel-widget ">
      <div class="row no-padding">
        <div class="col-sm-3 col-lg-5 widget-left">
          <div class="large-2"><span class="glyphicon glyphicon-equalizer"></span></div>
        </div>
        <div class="col-sm-9 col-lg-7 widget-right">
          <div class="large"><%= number_for_statistics(@statistics[0]) %></div>
          <div class="text-muted">This Month</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-6 col-lg-4">
    <div class="panel panel-orange panel-widget">
      <div class="row no-padding">
        <div class="col-sm-3 col-lg-5 widget-left">
          <div class="large-2"><span class="glyphicon glyphicon-stats"></span></div>
        </div>
        <div class="col-sm-9 col-lg-7 widget-right">
          <div class="large"><%= number_for_statistics(@statistics[1]) %></div>
          <div class="text-muted">Last Month</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-12 col-lg-4">
    <div class="panel panel-red panel-widget">
      <div class="row no-padding">
        <div class="col-sm-3 col-lg-5 widget-left">
          <div class="large-2"><span class="glyphicon glyphicon-globe"></span></div>
        </div>
        <div class="col-sm-9 col-lg-7 widget-right">
          <div class="large"><%= number_for_statistics(@statistics[2]) %></div>
          <div class="text-muted">Total Page Views</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading"><span class="glyphicon glyphicon-signal"></span>&nbsp;Site Traffic Overview</div>
      <div class="panel-body">
        <div class="canvas-wrapper">
          <%= column_chart(@daily_traffic, xtitle: 'Date', ytitle: 'Traffic') %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading"><span class="glyphicon glyphicon-send"></span>&nbsp;Quick Broadcast Newsletter</div>
      <div class="panel-body">
        <%= form_for([:admins, @newsletter_queue]) do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.label :subject, :class => 'control-label' %>
              <%= f.text_field :subject, :class => 'form-control', :placeholder => 'Subject' %>
            </div>
            <div class="form-group" data-no-turbolink>
              <%= f.label :content, :class => 'control-label' %>
              <%= f.cktext_area :content %>
            </div>
            <%= f.submit 'Queue Newsletter', :class => 'btn btn-info btn-md pull-right' %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="panel panel-default">
          <div class="panel-body easypiechart-panel">
            <h4>Login Times</h4>
            <div class="easypiechart" id="easypiechart-blue"><span class="percent"><%= @login_times %></span></div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="panel panel-default">
          <div class="panel-body easypiechart-panel">
            <h4>Server CPU</h4>
            <div class="easypiechart" id="easypiechart-orange"><span class="percent"><%= @server_cpu.nil? ? 'N/A' : @server_cpu + '%' %></span></div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="panel panel-default">
          <div class="panel-body easypiechart-panel">
            <h4>Server Memory</h4>
            <div class="easypiechart" id="easypiechart-teal"><span class="percent"><%= @server_memory.nil? ? 'N/A' : @server_memory + '%' %></span></div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="panel panel-default">
          <div class="panel-body easypiechart-panel">
            <h4>Server Storage</h4>
            <div class="easypiechart" id="easypiechart-red"><span class="percent"><%= @server_storage.nil? ? 'N/A' : @server_storage + '%' %></span></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  CKEDITOR.replace('newsletter_queue_content');
</script>
