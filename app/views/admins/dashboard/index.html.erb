<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Dashboard</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6 col-lg-4">
    <div class="panel panel-blue panel-widget ">
      <div class="row no-padding">
        <div class="col-sm-3 col-lg-5 widget-left">
          <div class="large-2"><span class="glyphicon glyphicon-equalizer"></span></div>
        </div>
        <div class="col-sm-9 col-lg-7 widget-right">
          <div class="large">120</div>
          <div class="text-muted">This Month</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-6 col-lg-4">
    <div class="panel panel-orange panel-widget">
      <div class="row no-padding">
        <div class="col-sm-3 col-lg-5 widget-left">
          <div class="large-2"><span class="glyphicon glyphicon-stats"></span></div>
        </div>
        <div class="col-sm-9 col-lg-7 widget-right">
          <div class="large">52</div>
          <div class="text-muted">Last Month</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-12 col-lg-4">
    <div class="panel panel-red panel-widget">
      <div class="row no-padding">
        <div class="col-sm-3 col-lg-5 widget-left">
          <div class="large-2"><span class="glyphicon glyphicon-globe"></span></div>
        </div>
        <div class="col-sm-9 col-lg-7 widget-right">
          <div class="large">25.2k</div>
          <div class="text-muted">Total Page Views</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading"><span class="glyphicon glyphicon-signal"></span>&nbsp;Site Traffic Overview</div>
      <div class="panel-body">
        <div class="canvas-wrapper">
          <%= column_chart({ "Football" => 10, "Basketball" => 5 }) %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading"><span class="glyphicon glyphicon-envelope"></span>&nbsp;Broadcast Newsletter</div>
      <div class="panel-body">
        <form class="form-horizontal" action="" method="post">
          <fieldset>
            <!-- Name input-->
            <div class="form-group">
              <label class="col-md-3 control-label" for="name">Name</label>
              <div class="col-md-9">
              <input id="name" name="name" type="text" placeholder="Your name" class="form-control">
              </div>
            </div>

            <!-- Message body -->
            <div class="form-group">
              <label class="col-md-3 control-label" for="message">Your message</label>
              <div class="col-md-9">
                <textarea class="form-control" id="message" name="message" placeholder="Please enter your message here..." rows="5"></textarea>
              </div>
            </div>

            <!-- Form actions -->
            <div class="form-group">
              <div class="col-md-12 widget-right">
                <button type="submit" class="btn btn-default btn-md pull-right">Queue</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="panel panel-default">
          <div class="panel-body easypiechart-panel">
            <h4>Login Times</h4>
            <div class="easypiechart" id="easypiechart-blue"><span class="percent">114</span></div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="panel panel-default">
          <div class="panel-body easypiechart-panel">
            <h4>Subscribers</h4>
            <div class="easypiechart" id="easypiechart-orange"><span class="percent">36</span></div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="panel panel-default">
          <div class="panel-body easypiechart-panel">
            <h4>Server Usage</h4>
            <div class="easypiechart" id="easypiechart-teal"><span class="percent">5%</span></div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div class="panel panel-default">
          <div class="panel-body easypiechart-panel">
            <h4>Server Storage</h4>
            <div class="easypiechart" id="easypiechart-red"><span class="percent">18%</span></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
