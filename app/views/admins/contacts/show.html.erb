<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Contacts', admins_contacts_path %>
    <%= breadcrumb_item 'Preview' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= @contact.name %><br/>
      <small>
        (<%= @contact.email %>) -&nbsp;
        <% if @contact.is_subscribed %>
          <span class="label label-success">Subscribed</span>
        <% else %>
          <span class="label label-danger">Not subscribed</span>
        <% end %>
      </small>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= @contact.message %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to admins_contacts_path, :class => 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-menu-left"></span>&nbsp;Back
        <% end %>
      </div>
    </div>
  </div>
</div>
