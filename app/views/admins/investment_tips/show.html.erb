<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Investment Tips', admins_investment_tips_path %>
    <%= breadcrumb_item 'Preview' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @investment_tip.title %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <span class="glyphicon glyphicon-pencil"></span>&nbsp;<%= @investment_tip.custom_posted_by || (@investment_tip.posted_by.eql?(current_admin) ? 'You' : @investment_tip.posted_by.full_name) %>&nbsp;
        <span class="glyphicon glyphicon-time"></span>&nbsp;<%= @investment_tip.created_at.to_s %><br/>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= @investment_tip.content.html_safe %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= link_to admins_investment_tips_path, :class => 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-menu-left"></span>&nbsp;Back
        <% end %>
        <%= link_to edit_admins_investment_tip_path(@investment_tip), :class => 'btn btn-info' do %>
          <span class="glyphicon glyphicon-pencil"></span>&nbsp;Edit
        <% end %>
      </div>
    </div>
  </div>
</div>
