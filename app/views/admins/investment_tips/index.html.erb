<div class="row">
  <%= breadcrumb do %>
    <%= breadcrumb_item %>
    <%= breadcrumb_item 'Investment Tips' %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Investment Tips Management</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <%= link_to new_admins_investment_tip_path, :class => 'btn btn-success pull-right' do %>
            <span class="glyphicon glyphicon-plus"></span>&nbsp;Create Investment Tip
          <% end %>
          <thead>
            <th>Title</th>
            <th>Posted</th>
            <th>Control</th>
          </thead>

          <tbody>
            <tbody>
              <% if @investment_tips.empty? %>
                <tr>
                  <td colspan="3">You have no investment tips. <%= link_to 'Create a new one!', new_admins_investment_tip_path %>.</td>
                </tr>
              <% else %>
                <% @investment_tips.each do |investment_tip| %>
                  <tr>
                    <td><%= investment_tip.title %></td>
                    <td>
                      <%= investment_tip.created_at.to_s %><br/>
                      <%= investment_tip.custom_posted_by || investment_tip.posted_by.full_name %>
                    </td>
                    <td>
                      <%= link_to 'Preview', admins_investment_tip_path(investment_tip) %>&nbsp;|
                      <%= link_to 'Edit', edit_admins_investment_tip_path(investment_tip) %>&nbsp;|
                      <%= link_to 'Destroy', admins_investment_tip_path(investment_tip), :method => :delete, :data => { :confirm => 'Are you sure?' } %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
